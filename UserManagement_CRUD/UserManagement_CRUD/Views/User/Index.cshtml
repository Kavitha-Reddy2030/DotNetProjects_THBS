@{
}
@model IEnumerable<User>

<h2>User List</h2>

<table class="table">
    <thead>
        <tr>
            <th>UserID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>User Name</th>
            <th>Address</th>
            <th>Created By</th>
            <th>Created Date</th>
            <th>Active</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
        <tr>
            <td>@user.UserId</td>
            <td>@user.FirstName</td>
            <td>@user.LastName</td>
            <td>@user.UserName</td>
            <td>@user.Address</td>
            <td>@user.CreatedBy</td>
            <td>@user.CreatedDate</td>
            <td>@user.Active</td>
            <td>
                <!-- Edit Button -->
                <a asp-action="Edit" asp-route-id="@user.UserId" class="btn btn-primary">Edit</a>

                <!-- Delete Button with Confirmation -->
                <form asp-action="Delete" asp-route-id="@user.UserId" method="post" style="display:inline"
                      onsubmit="return confirm('Are you sure you want to delete this user?');">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </td>
        </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create", "User")" class="btn btn-primary">Add User</a>
